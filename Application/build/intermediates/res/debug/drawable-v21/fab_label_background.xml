                        android:right="8dp"
                        android:bottom="4dp" />
                    <corners android:radius="2dp" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#99000000" />
                    <padding
                        android:left="8dp"
                        android:top="4dp"
                        android:right="8dp"
                        android:bottom="4dp" />
                    <corners android:radius="2dp" />
                </shape>
            </item>

        </selector>
    </item>

</ripple>

